<%= form_for(@event, html: {id: "event_form",onsubmit: "return false;"}) do |f| %> 
  <div class="field">  
   <%= f.label :title %><br />  
   <%= f.text_field :name %>  
  </div>  
  <div class="field">  
   <%= f.label :starts_at %><br />  
   <%= f.datetime_select :start_time %>  
  </div>  
  <div class="field">  
   <%= f.label :ends_at %><br />  
   <%= f.datetime_select :end_time %>  
  </div> 
  <div class="field">  
   <%= f.label :description %><br />  
   <%= f.text_area :description %>  
  </div>  
  <div class="actions">  
   <%= f.submit "save" , :id => "create_event" %>  
  </div>  
<% end %> 